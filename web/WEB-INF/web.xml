        <servlet-name>MyAccountServlet</servlet-name>
        <servlet-class>Servlet.MyAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>Servlet.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveProductServlet</servlet-name>
        <servlet-class>Servlet.RemoveProductServlet</servlet-class>
    </servlet>
    <servlet>
